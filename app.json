{
  "expo": {
    "name": "Munir Demo",
    "slug": "munir-demo",
    "version": "1.0.0",
    "description": "A comprehensive chat application demo showcasing modern React Native development",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "dark",
    "newArchEnabled": true,
    "primaryColor": "#0da6f2",
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#101d23"
    },
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "name": "Munir Demo - Chat App",
      "shortName": "Munir Demo",
      "lang": "en",
      "scope": "/",
      "themeColor": "#0da6f2",
      "backgroundColor": "#101d23",
      "startUrl": "/",
      "display": "standalone",
      "orientation": "portrait",
      "bundler": "metro"
    },
    "plugins": [
      "expo-router"
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
